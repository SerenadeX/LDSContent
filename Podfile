    pod 'FTS3HTMLTokenizer', '~> 2.0'
    pod 'Swiftification'
    pod 'SSZipArchive'
end

target 'LDSContentTests' do
    pod 'PSOperations'
    pod 'SQLite.swift', '~> 0.9.2'
    pod 'FTS3HTMLTokenizer', '~> 2.0'
    pod 'Swiftification'
    pod 'SSZipArchive'
end

target 'LDSContentDemo' do
    xcodeproj 'LDSContentDemo.xcodeproj'
    
    pod 'PSOperations'
    pod 'SQLite.swift', '~> 0.9.2'
